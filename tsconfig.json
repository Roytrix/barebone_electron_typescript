{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": false,
        "experimentalDecorators": false,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "target": "es2015",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}